{
  "name": "lit-robot-manager",
  "version": "0.1.1",
  "description": "control lit components with robot state machines",
  "author": "gatlin@niltag.net",
  "license": "AGPL-3.0",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/index.d.ts",
    "dist/index.js",
    "dist/index.js.map"
  ],
  "scripts": {
    "build": "tsc",
    "clean": "rimraf dist",
    "format": "prettier --write \"index.ts\"",
    "lint": "eslint \"index.ts\" --fix",
    "prepublishOnly": "tsc",
    "example": "tsc -p tsconfig.example.json && concurrently -k -r \"tsc -p tsconfig.example.json --watch --preserveWatchOutput\" \"wds --node-resolve --watch\""
  },
  "dependencies": {
    "lit": "^2.0.0-rc.2",
    "robot3": "^0.2.19",
    "torc": "github:gatlin/torc#0918d6d2e",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "@web/dev-server": "^0.1.18",
    "@web/dev-server-storybook": "^0.1.3",
    "concurrently": "^5.3.0",
    "eslint": "^7.25.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "typescript": "^4.2.4"
  }
}
